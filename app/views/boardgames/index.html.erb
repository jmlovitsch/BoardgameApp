<h1 class="title">Welcome to your Social Boardgame Experience</h1>


<%= form_tag boardgames_path, :method => "get" do %>
  <%= label_tag(:name, "What game do you want to search for?") %>
  <%= text_field_tag :name %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<%= form_for @category do |f| %>
  <%= f.label "Browse by Category" %>
  <%= f.collection_select :id, @categories, :id, :name %>
  <%= f.submit 'Browse', name: nil %>
<% end %>
<%= link_to "Highest User Rated Games", highest_rated_path %>
<br>
<br>
<ul>
<% @boardgames.each do |b| %>

<li><b><%= link_to b.name, boardgame_path(b) %></b></li><br>
<% if b.small_image %>
  <li><%= link_to (image_tag b.small_image, alt: "boardgame"), boardgame_path(b) %>
<% end %>

<% if !b.categories.empty? %>
  <li>Category:<% b.categories.each do |e| %>
      <% if b.categories.count > 1 %>
       |
      <% end %>
      <%= link_to e.name, category_path(e) %>
      <% end %></li>
    <% end %>
  
<li><%== b.description.first(300) ...%></li>
<br><br>
<% end %>
<ul>
<br>
<p>Do you have an original boardgame?</p>
<p>Then share your novel boardgame with the community</p>
    <span class="button"> <%= link_to "Submit a Boardgame", new_boardgame_path %> </span>
<p>Share your novel boardgame with the community</p>
