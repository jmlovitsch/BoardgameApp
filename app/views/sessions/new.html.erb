<div class="back_img">
<div class="columns is-centered mt-2">
  <div class="column is-one-third">
    <div class="box">
    <h1 class="is-size-2 has-text-weight-bold mb-3 has-text-centered"> Log-in</h1>
    </div>

      <% if flash[:error] %>
        <p style="color: red"><%= flash[:error] %></p><br><br>
      <% end %>

<%= form_for @user, url: login_path, method: :post do |f| %>
  <div class="field">
      <%= f.label "Username", class: "label" %>
      <%= f.text_field :username, class: "input"%>
    </div>
    <div class="field">
      <%= f.label "Password", class: "label" %>
      <%= f.password_field :password, class: "input " %>
    </div>


<div class="columns is-centered mt-6">
  <div class="column is-half">
      <div class="box is-fullwidth has-background-info-dark">
        <article class="box">
          <div class="action">
          <%= submit_tag "Log in", class: "button has-background-info-dark" %>
            <br>
            <br>
          <%= link_to "Sign up", new_user_path, class: "button has-background-info-dark" %>
          </div>
        <% end %>
        </article>
      </div>
    </div>
  </div>
</div>


  </div>
  </div>
  </div>
