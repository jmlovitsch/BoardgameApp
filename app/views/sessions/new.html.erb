<div class="back_img">
<div class="columns is-centered mt-2">
  <div class="column is-one-third">
    <h1 class="is-size-2 has-text-weight-bold mb-3"> Log-in</h1>

      <% if flash[:error] %>
        <p style="color: red"><%= flash[:error] %></p><br><br>
      <% end %>

<%= form_for @user, url: login_path, method: :post do |f| %>
  <div class="field">
      <%= f.label "Username", class: "label" %>
      <%= f.text_field :username, class: "input"%>
    </div>
    <div class="field">
      <%= f.label "Password", class: "label" %>
      <%= f.password_field :password, class: "input" %>
    </div>

  <div class="action">
  <%= submit_tag "Log in", class: "button" %>
    <p class="">OR</p>
  <%= link_to "Sign up", new_user_path, class: "button" %>
  </div>
<% end %>


  </div>
  </div>
  </div>
