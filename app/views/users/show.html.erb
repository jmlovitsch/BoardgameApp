<h1><%= current_user.full_name %></h1>
<h4>Username: <%= current_user.username%><br><br>
    Email: <%= current_user.email%>
</h4>

<h4 class="subtitle">Your Categories</h4>
<% current_user.boardgames.each do |c| %>
<% c.categories.each do |u| %>
<%= u.name %>
<br>
<% end %>
<% end %>
<br>
  <%= button_to "Edit User", edit_user_path(current_user), method: "get"%><br>
  <%= button_to "Delete User", user_path(current_user), method: "delete",  data: {confirm: "Are you sure?"} %><br>
  <%= button_to "Back to Search", '/', method: 'get' %>

  <%= link_to "Your Boardgame Collection", user_boardgame_path(current_user) %>
  |
  <%= link_to "Your Reviews", user_review_path(current_user) %>
